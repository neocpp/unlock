<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/unlock_counts"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/circle"
            android:gravity="center"
            android:text="00"
            android:textColor="@color/white"
            android:textSize="38pt" />

        <TextView
            android:id="@+id/compare_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="@string/compare_percentage"
            android:textColor="@color/white"
            android:textSize="8pt" />

        <TextView
            android:id="@+id/yesterday_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="@string/yesterday_count"
            android:textColor="@color/white"
            android:textSize="8pt" />

        <TextView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/share"
            android:gravity="center"
            android:text="@string/share"
            android:textColor="@color/white"
            android:textSize="8pt" />
    </LinearLayout>
    
    <SlidingDrawer
        android:id="@+id/sliding_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:content="@+id/unlock_detail_list"
        android:handle="@+id/sliding_handle"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/sliding_handle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/lightblue"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/sliding_handle_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:src="@drawable/up_arrow"/>

            <TextView
                android:id="@+id/sliding_handle_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_detail"
                android:textColor="@color/white"
                android:textSize="8pt" />
        </LinearLayout>

        <ExpandableListView
            android:id="@id/unlock_detail_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:background="@color/blue"/>
    </SlidingDrawer>
    

</FrameLayout>